---
import '../styles/global.css'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <!-- FAVICON -->
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>USD ↔ DOP | Tasa de Cambio</title>
  </head>
  <body class='min-h-screen bg-white'>
    <header class='border-b border-slate-100 bg-slate-50'>
      <div class='mx-auto max-w-5xl px-4 py-6'>
        <h1 class='text-3xl font-bold text-gray-900'>USD ↔ DOP</h1>
        <p class='mt-1 text-gray-500'>
          Tasa de cambio actualizada: <span id='update-date'>00/00/0000</span>
        </p>
      </div>
    </header>
    <slot />
    <footer class='mt-12 border-t border-gray-200 bg-white'>
      <div class='mx-auto max-w-5xl px-4 py-6'>
        <p class='text-center text-sm text-gray-500'>
          Datos proporcionados del Banco Central de la República Dominicana.
        </p>
      </div>
    </footer>
  </body>
</html>

<script>
  const updateDate = document.getElementById('update-date') as HTMLSpanElement
  updateDate.textContent = new Date().toLocaleDateString('es-DO')
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
