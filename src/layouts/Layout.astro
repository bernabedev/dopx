---
import ThemeToggle from '../components/layout/theme-toggle.astro'
import '../styles/global.css'
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <!-- FAVICON -->
    <link rel='icon' type='image/x-icon' href='/favicon.ico' />
    <title>USD ↔ DOP | Tasa de Cambio</title>
  </head>
  <body class='min-h-screen dark:text-white'>
    <div
      class='fixed inset-0 -z-10 h-full w-full bg-white bg-[linear-gradient(to_right,#8080800a_1px,transparent_1px),linear-gradient(to_bottom,#8080800a_1px,transparent_1px)] bg-[size:14px_24px] dark:bg-slate-950'
    >
    </div>
    <header
      class='flex justify-between border-b border-slate-100 bg-slate-50 dark:border-white/5 dark:bg-slate-900'
    >
      <div class='mx-auto flex w-full max-w-5xl justify-between px-4 py-6'>
        <div>
          <h1 class='text-3xl font-bold text-gray-900 dark:text-white'>
            USD ↔ DOP
          </h1>
          <p class='mt-1 text-gray-500 dark:text-slate-400'>
            Tasa de cambio actualizada: <span id='update-date'>00/00/0000</span>
          </p>
        </div>
        <ThemeToggle />
      </div>
    </header>
    <slot />
    <footer
      class='mt-12 border-t border-gray-200 bg-white dark:border-white/5 dark:bg-slate-900'
    >
      <div class='mx-auto max-w-5xl px-4 py-6'>
        <p class='text-center text-sm text-gray-500 dark:text-slate-400'>
          Datos proporcionados del Banco Central de la República Dominicana.
        </p>
      </div>
    </footer>
  </body>
</html>

<script>
  const updateDate = document.getElementById('update-date') as HTMLSpanElement
  updateDate.textContent = new Date().toLocaleDateString('es-DO')
</script>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
